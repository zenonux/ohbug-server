{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "name": "ohbug-server",
  "version": "1.0.0",
  "description": "Ohbug Server",
  "author": "chenyueban <jasonchan0527@gmail.com>",
  "homepage": "https://github.com/ohbug-org/ohbug-server",
  "bugs": {
    "url": "https://github.com/ohbug-org/ohbug-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ohbug-org/ohbug-server"
  },
  "license": "Apache-2.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "dev": "lerna run start --parallel",
    "start": "concurrently \"npm run docker:dev\" \"npm run dev\" --kill-others",
    "start:debug": "cross-env pm2 start ./ecosystem.config.js --env production",
    "start:prod": "cross-env pm2-runtime start ./ecosystem.config.js --env production",
    "docker:dev": "docker-compose -f ./docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose --env-file .env.production -f ./docker-compose.prod.yml up --build -d",
    "prettier": "lerna run prettier",
    "lint": "lerna run lint",
    "test": "jest",
    "test:watch": "lerna run test:watch --parallel",
    "update:deps": "yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.1",
    "@nestjs/bull": "^0.4.0",
    "@nestjs/common": "^8.0.4",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.4",
    "@nestjs/microservices": "^8.0.4",
    "@nestjs/platform-express": "^8.0.4",
    "@nestjs/schedule": "^1.0.0",
    "@nestjs/typeorm": "^8.0.1",
    "@ohbug/browser": "^1.0.17",
    "@ohbug/core": "^1.1.5",
    "@ohbug/miniapp": "^1.0.1",
    "@ohbug/react": "^1.0.13",
    "@ohbug/types": "^1.1.4",
    "@ohbug/vue": "^1.0.12",
    "bull": "^3.26.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "pg": "^8.6.0",
    "ramda": "^0.27.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.34"
  },
  "devDependencies": {
    "@chenyueban/lint": "^0.2.13",
    "@chenyueban/tsconfig": "^0.1.8",
    "@nestjs/cli": "^8.0.2",
    "@nestjs/testing": "^8.0.4",
    "@types/bull": "^3.15.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.1",
    "@types/ramda": "^0.27.44",
    "@types/react": "^17.0.14",
    "@types/supertest": "^2.0.11",
    "axios": "^0.21.1",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "projects": [
      "<rootDir>/packages/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
